<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iron"
    android:paddingBottom="3dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/cvitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:id="@+id/txtCustomerNameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/circle"
                android:text="Customer Name"
                android:textColor="@color/colorAccentGreen"
                android:textSize="14dp"
                android:textStyle="bold" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circle"
                android:layout_marginLeft="6dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="left|top"
                android:src="@drawable/ic_profile_64"
                app:civ_border_color="@color/colorAccentGreen"
                app:civ_border_width="5dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#212121"
                app:civ_shadow_radius="10" />

            <TextView
                android:id="@+id/txtLatitudeAbsen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtCustomerNameItem"
                android:layout_alignLeft="@+id/txtCustomerNameItem"
                android:layout_alignRight="@+id/txtCustomerNameItem"
                android:layout_alignStart="@+id/txtCustomerNameItem"
                android:layout_below="@+id/txtCustomerNameItem"
                android:text="Latitude"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/txtLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtLatitudeAbsen"
                android:layout_alignLeft="@+id/txtLatitudeAbsen"
                android:layout_alignRight="@+id/txtLatitudeAbsen"
                android:layout_alignStart="@+id/txtLatitudeAbsen"
                android:layout_below="@+id/txtLatitudeAbsen"
                android:text="Longitude"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtLongitude"
                android:layout_alignLeft="@+id/txtLongitude"
                android:layout_alignRight="@+id/txtLongitude"
                android:layout_alignStart="@+id/txtLongitude"
                android:layout_below="@+id/txtLongitude"
                android:text="Date"
                android:textSize="12dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>