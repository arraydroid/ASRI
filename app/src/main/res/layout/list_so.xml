<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iron"
    android:paddingBottom="3dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/cvitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:id="@+id/soId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="6dip"
                android:paddingTop="6dip"
                android:text="so detail id"
                android:visibility="gone" />
            <TextView
                android:id="@+id/soCode"
                android:layout_below="@+id/customerName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="So Code"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/customerId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/soId"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="Customer Id"
                android:textColor="@color/red_light"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/customerName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/soId"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="Customer Name"
                android:textColor="@color/red_light"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salesName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/soCode"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="Sales Name"
                android:textSize="11dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/remarkName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salesName"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="Remark"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/dateName"
                android:layout_below="@+id/remarkName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="Date"
                android:textSize="11dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>