<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="3dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/cvitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:id="@+id/detail_soId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="6dip"
                android:paddingTop="6dip"
                android:text="so detail id"
                android:visibility="gone" />

            <TextView
                android:id="@+id/detail_itemName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_soId"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="Item Name"
                android:textColor="@color/red_light"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_qtyId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_itemCode"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="qty"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/detail_itemCode"
                android:layout_below="@+id/detail_itemName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:paddingLeft="6dip"
                android:text="Item Code"
                android:textSize="11dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>